name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main  # or your default branch
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2

      - name: Setup Node.js (if needed)
        uses: actions/setup-node@v2
        with:
          node-version: '16'  # specify the Node.js version if your site uses it

      - name: Build Project (if necessary)
        run: |
          npm install
          npm run build  # or any build command you use

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./public  # path to the folder where your built site is located
          publish_branch: gh-pages  # branch for GitHub Pages
